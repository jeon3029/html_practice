extends layout

block content
  h1= title
  p #{title}에 오신것을 환영합니다🥳
  a(href="newcomment") 방명록 작성
  #wrapper
    h2 남겨진 방명록
    #userList
      table
        thead
          th Title
          th User
          th Email
          th Time
          th Comment
          th Delete
        tbody
          each com, i in articleList
            tr
              td
                p=com.comment_title
              td 
                p=com.comment_userid
              td
                p=com.comment_email
              td
                p=com.comment_datetime
              td
                p=com.comment_content
              td
                a(href="deletecomment" rel ="this.id") del